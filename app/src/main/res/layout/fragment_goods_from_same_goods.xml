<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/white">


    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/ib_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@null"
            android:padding="20dp"
            android:src="@drawable/ic_arrow_back_black_24dp" />

        <ImageButton
            android:id="@+id/settingButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvGoodsName"
            android:layout_gravity="center_vertical"
            android:layout_toEndOf="@id/ivGoods"
            android:background="@null"
            android:padding="20dp"
            app:srcCompat="@drawable/ic_settings_black_24dp" />

        <ImageButton
            android:id="@+id/favBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/settingButton"
            android:layout_toEndOf="@id/ivGoods"
            android:background="@null"
            android:padding="20dp"
            android:src="@drawable/ic_favorite_white_24dp" />


        <TextView
            android:id="@+id/tvGoodsName"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:background="@drawable/et_bg_2"
            android:padding="10dp"
            android:text="Goods Name"
            android:textSize="30sp" />

        <ImageView
            android:id="@+id/ivGoods"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_below="@id/tvGoodsName"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp" />
    </RelativeLayout>


    <TextView
        android:id="@+id/tv_itemStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_top"
        android:padding="20dp"
        android:text="Item does not exist in your inventory."
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <ListView
        android:id="@+id/listGoods"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_top"
        android:background="@drawable/et_bg_2"
        android:visibility="gone" />


</RelativeLayout>